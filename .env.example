# Database settings
DATABASE_URL=sqlite:///./credits.db

# Security settings
SECRET_KEY=your-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email settings
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=your-email@example.com

# API Key
API_KEY=your-production-api-key-here

# Admin users (comma-separated list of admin emails)
ADMIN_EMAILS=admin@your-domain.com

# Default admin password (used when creating new admin users)
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password-here

# Frontend origins for CORS (comma-separated list)
FRONTEND_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
